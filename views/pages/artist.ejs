<%-  include('../partials/header'); %>

<!-- create artist display page -->
<main class="main" id="artistMain">
    <div class="container">
        <div class="row">
            <nav class="nav justify-content-evenly">
                <a href="/artist/form" class="nav-link">Add an Artist</a>
                <a href="/artist/sort" class="nav-link">Sort Artists</a>
            </nav>
        </div>
        <div class="row">
            <% data.forEach(item => { %>
                <div class="col-md-4">
                    <figure class="figure artist-figure">
                        <img src="/images/<%= item.imgUrl %>" alt="image of <% item.artist %>" class="img-fluid" />
                        <figcaption class="figure-caption artist-caption">
                            <a href="/artist/<%= item.artist_id %>">
                                <% if (item.alias == null || item.alias == '') {%>
                                    <%= item.fName %> <%= item.lName %>
                                <% } else { %>
                                    <%= item.alias %>
                                <% } %>
                            </a>
                        </figcaption>
                    </figure>
                </div>
            <% }) %>
        </div>
    </div>
</main>


<%-  include('../partials/footer'); %>